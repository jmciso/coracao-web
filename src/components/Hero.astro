---
import { getAssetURL } from "../utils/utils";

const { article } = Astro.props
---
<!-- {article && -->
<article class="hero">
  <div class="hero__topWrapper">
    <div class="hero__imageWrapper">
      <img src={getAssetURL(article.front_img)} alt="" loading="lazy" />
    </div>
    {article.topics && <span aria-hidden="true" class="tag">{article.topics?.join(" ")}</span>}
  </div>
  <h1 class="hero__title">
    <a href={`/articles/${article.id}`}>{article.title}</a>
  </h1>
  <p class="hero__excerpt">{article.abstract}</p>
  <div class="hero__detail">
    { article.user_created?.avatar &&
    <div class="hero__detailAuthorImage">
      <img src={getAssetURL(article.user_created?.avatar)} alt="" loading="lazy" />
    </div>
  }
    <div>
      <div class="hero__detailAuthorName">
        HML
        <!-- {`${article.user_created?.first_name} ${article.user_created?.last_name}`} -->
      </div>
      <div>{article.publish_date}</div>
      {article.topics && <div class="hero__detailCategory">{article.topics?.join(" ")}</div> }
    </div>
  </div>
</article>
<!-- } -->