---
import Logo from "./Logo.astro";

  const links = [
	{url: '/hugo', label: 'Hugo'},
	{url: '/coracao', label: 'A Casa'},
	{url: '/residencies', label: 'Residências'},
	{url: '/therapies', label: 'Terapias'},
	{url: '/men-circles', label: 'Círculos de Homens'},
	{url: '/workshops', label: 'Workshops'},
	{url: '/contacts', label: 'Contactos'},
	{url: '/blog', label: 'Blog'}
];
---
<header>
  <div class="flex items-center justify-between px-4 py-2 bg-gray-800 text-white">
    <div class="flex items-center">
      <Logo />
    </div>
    <nav class="md:flex items-center hidden">
      {links.map(link => (
        <a href={link.url} class="mx-4 hover:text-gray-300">
          {link.label}
        </a>
      ))}
    </nav>
    <button class="md:hidden flex items-center" aria-label="Toggle menu">
      <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
        <path v-if="showMenu" fill-rule="evenodd" clip-rule="evenodd" d="M19 13H5v-2h14v2zm2-7H3v2h18V6zm0 10H3v2h18v-2z"/>
        <path v-if="!showMenu" fill-rule="evenodd" clip-rule="evenodd" d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm0 5h16v2H4v-2z"/>
      </svg>
    </button>
  </div>
</header>

<header class="bg-white shadow">
  <nav class="container mx-auto px-6 py-4 md:flex md:justify-between md:items-center">
    <div class="flex items-center justify-between">
      <div>
        <a class="text-xl font-bold text-gray-800 md:text-2xl hover:text-gray-700" href="#">Logo</a>
      </div>
      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="toggle menu">
          <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M3 6.75C3 6.33579 3.33579 6 3.75 6H20.25C20.6642 6 21 6.33579 21 6.75C21 7.16421 20.6642 7.5 20.25 7.5H3.75C3.33579 7.5 3 7.16421 3 6.75ZM3 12.75C3 12.3358 3.33579 12 3.75 12H20.25C20.6642 12 21 12.3358 21 12.75C21 13.1642 20.6642 13.5 20.25 13.5H3.75C3.33579 13.5 3 13.1642 3 12.75ZM3.75 18C3.33579 18 3 18.3358 3 18.75C3 19.1642 3.33579 19.5 3.75 19.5H20.25C20.6642 19.5 21 19.1642 21 18.75C21 18.3358 20.6642 18 20.25 18H3.75Z"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile menu -->
    <div class="hidden md:flex md:items-center">
      <div class="flex flex-col md:flex-row md:mx-6">
        <a class="my-1 text-gray-700 font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">Link 1</a>
        <a class="my-1 text-gray-700 font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">Link 2</a>
      </div>
    </div>
  </nav>
</header>