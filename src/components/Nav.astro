---
import Logo from '../components/Logo.astro';

---

<script>
    const navToggle = document.getElementById("nav-toggle");
    const navMenu = document.getElementById("nav-menu");
    navToggle.addEventListener("click", () => {
        navToggle.setAttribute(
            "aria-expanded",
            !navToggle.getAttribute("aria-expanded")
        );
        navMenu.classList.toggle("hidden");
    });
</script>

<header class="bg-green-600 text-white">
    <div class="container mx-auto px-6 py-4 flex items-center justify-between">
        <a href="#" class="text-lg font-medium">
            <Logo />
        </a>
        <button class="md:hidden focus:outline-none" id="nav-toggle">
            <svg
                class="fill-current text-white h-6 w-6"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
            >
                <title>Menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
            </svg>
        </button>
        <nav
            class="md:flex md:items-center w-full md:w-auto hidden"
            id="nav-menu"
        >
            <div class="md:flex-grow">
                <a
                    href="#"
                    class="block md:inline-block mt-4 md:mt-0 mr-6 no-underline text-white"
                    >Home</a
                >
                <a
                    href="#"
                    class="block md:inline-block mt-4 md:mt-0 mr-6 no-underline text-white"
                    >About</a
                >
                <a
                    href="#"
                    class="block md:inline-block mt-4 md:mt-0 mr-6 no-underline text-white"
                    >Services</a
                >
                <a
                    href="#"
                    class="block md:inline-block mt-4 md:mt-0 mr-6 no-underline text-white"
                    >Products</a
                >
                <a
                    href="#"
                    class="block md:inline-block mt-4 md:mt-0 mr-6 no-underline text-white"
                    >Contact</a
                >
            </div>
        </nav>
    </div>
</header>
